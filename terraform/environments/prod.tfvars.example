# Production Environment Variables
# Copy this to prod.tfvars and fill in your actual values
# NEVER commit prod.tfvars to git!

project_id            = "your-gcp-project-id"
region                = "us-east1"
zone                  = "us-east1-b"
environment           = "prod"
machine_type          = "e2-micro"
disk_size_gb          = 10
ssh_user              = "your-username"
ssh_public_key_path   = "~/.ssh/id_rsa.pub"
allowed_web_ips       = ["0.0.0.0/0"]           # Public access for HTTP/HTTPS
allowed_ssh_ips       = ["your.ip.address/32"]  # Your home/office IP for SSH
